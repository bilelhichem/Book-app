<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".profilfrag"
    android:background="@color/bb"
    android:padding="5dp"
    >
<androidx.cardview.widget.CardView
    android:id="@+id/cardpro"
    android:layout_width="110dp"
    android:layout_height="110dp"
    app:cardCornerRadius="50dp"
    app:cardBackgroundColor="@color/bb"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="30dp"
    >
    <ImageView
        android:id="@+id/imgpersone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ha"
        android:scaleType="centerCrop"

        >
    </ImageView>
</androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/namepersone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardpro"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="Name Persone"
        android:layout_marginTop="10dp"
        android:textSize="17dp"
        android:letterSpacing="0.01"
        >
    </TextView>



    <LinearLayout
        android:background="@drawable/backfav"
        android:backgroundTint="#222227"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:layout_below="@id/namepersone"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        >


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="15dp"
    android:orientation="horizontal"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            app:cardBackgroundColor="@color/bb"
            app:cardCornerRadius="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/signout"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/_106326_audience_target_analysis_people_icon"
                app:tint="@color/white">

            </ImageView>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cardView2"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:letterSpacing="0.01"
                android:text="Personel information"
                android:textColor="@color/white"
                android:textSize="15dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:letterSpacing="0.01"
                android:text="Username,Image profil"
                android:textColor="#757575"
                android:textSize="13dp"></TextView>
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/changeinfo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            app:cardBackgroundColor="#302B2B"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                app:tint="@color/white">

            </ImageView>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView9"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:layout_marginLeft="20dp"
                    app:cardBackgroundColor="@color/bb"
                    app:cardCornerRadius="14dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/_528031_blog_information_media_newspaper_paper_icon"
                        app:tint="@color/white">

                    </ImageView>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/cardView9"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:letterSpacing="0.01"
                        android:text="Contact me"
                        android:textColor="@color/white"
                        android:textSize="15dp"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:letterSpacing="0.01"
                        android:text="Instagram,Linkedln,Github"
                        android:textColor="#757575"
                        android:textSize="13dp"></TextView>
                </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView14"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"
                    app:cardBackgroundColor="#302B2B"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/insgitlink"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                        app:tint="@color/white">

                    </ImageView>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>




    </LinearLayout>



</RelativeLayout>