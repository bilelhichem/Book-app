<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/backfav"
    android:backgroundTint="#222227"
    android:layout_marginTop="10dp"
    android:elevation="10dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="125dp"
        android:layout_height="130dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/bb"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgdelivre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ha"></ImageView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name de Book"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="8dp"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/cardView4"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/namedelivrecat"
        >

    </TextView>

    <TextView
        android:id="@+id/autheurdelivrecat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Autheur de Book"
        android:textColor="#757575"
        android:textSize="14dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toEndOf="@+id/cardView4"
        app:layout_constraintTop_toTopOf="@id/namedelivrecat">

    </TextView>


    <LinearLayout
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent">






    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/learnlivr"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@drawable/backedit"
        android:backgroundTint="@color/white"
        android:text="Learn"
        android:layout_marginRight="20dp"
        android:textColor="@color/black"
        android:textSize="10dp"
        />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/moredetaille"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textSize="10dp"
            android:background="@drawable/backedit"
            android:backgroundTint="@color/red"
            android:text="Delete"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white">

        </androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>